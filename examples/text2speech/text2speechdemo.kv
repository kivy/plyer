#:kivy 1.8.0
<Text2SpeechDemo>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20

        TextInput:
            id: speak_text
            text: 'Put message here'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                text: 'Read'
                on_press: root.do_read()

            Spinner:
                id: lang_select
                text: ''
                values: root.lang_list
                pos_hint: {'center_x': .5, 'center_y': .5}

<ErrorPopup>:
    size_hint: .7, .4
    title: "Error"
    
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 20

        Label:
            size_hint_y: 0.4
            text: "This feature has not yet been implemented in Plyer."
        Button:
            text: 'Dismiss'
            size_hint_y: 0.4
            on_press: root.dismiss()

            